<!DOCTYPE ui:UiBinder 
  SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent"
>
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder' xmlns:g='urn:import:com.google.gwt.user.client.ui'
  xmlns:classroom='urn:import:com.jlsites.demo.classroom.client'>

  <g:LayoutPanel>
    <g:layer>
      <!-- scroll panel works fine within layout panels but layout panels do not work fine within scroll 
        panel -->
      <g:ScrollPanel width="100%" height="100%">
        <g:DockPanel width="100%" horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE">
          <g:Dock direction="NORTH">
            <classroom:TopPanel ui:field='topPanel' />
          </g:Dock>
          <g:Dock direction="CENTER" verticalAlignment="ALIGN_MIDDLE" horizontalAlignment="ALIGN_CENTER">
            <classroom:ContentPanel ui:field='contentPanel' />
          </g:Dock>
          <g:Dock direction="SOUTH" verticalAlignment="ALIGN_BOTTOM" horizontalAlignment="ALIGN_CENTER">
            <classroom:FooterPanel ui:field='footerPanel' />
          </g:Dock>
        </g:DockPanel>
      </g:ScrollPanel>

    </g:layer>
  </g:LayoutPanel>

</ui:UiBinder>
