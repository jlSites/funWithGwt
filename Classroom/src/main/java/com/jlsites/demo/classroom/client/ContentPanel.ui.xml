<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:classroom='urn:import:com.jlsites.demo.classroom.client'>

  <ui:style>
  .contentArea {
    height: 100%;
  }
  </ui:style>

  <g:DockPanel width="100%" horizontalAlignment="ALIGN_CENTER"
    verticalAlignment="ALIGN_MIDDLE">
    <g:Dock direction="WEST" width="20%">
      <classroom:MenuPanel ui:field='menuPanel' />
    </g:Dock>
    <g:Dock direction="CENTER">
      <g:HTMLPanel styleName='{style.contentArea}' ui:field='contentArea' />
    </g:Dock>

  </g:DockPanel>


</ui:UiBinder> 