<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:classroom='urn:import:com.jlsites.demo.classroom.client.ui'>
  <ui:style>
  .important {
    font-weight: bold;
  }
  
  .contentArea {
    height: 100%;
  }
  </ui:style>
  <g:DockPanel width="100%" horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE">
    <g:Dock direction="NORTH">
      <classroom:TopPanel ui:field='topPanel' />
    </g:Dock>
    <g:Dock direction="CENTER" verticalAlignment="ALIGN_MIDDLE" horizontalAlignment="ALIGN_CENTER">
      <g:DockPanel width="100%" horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE">
        <g:Dock direction="WEST" width="20%">
          <classroom:MenuPanel ui:field='menuPanel' />
        </g:Dock>
        <g:Dock direction="CENTER">
          <classroom:UploadFilesContent styleName='{style.contentArea}' />
        </g:Dock>
      </g:DockPanel>
    </g:Dock>
    <g:Dock direction="SOUTH" verticalAlignment="ALIGN_BOTTOM" horizontalAlignment="ALIGN_CENTER">
      <classroom:FooterPanel ui:field='footerPanel' />
    </g:Dock>
  </g:DockPanel>
</ui:UiBinder> 